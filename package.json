{
  "name": "@fig/plugins",
  "version": "1.5.9",
  "description": "",
  "types": "./index.d.ts",
  "files": [
    "dist",
    "index.d.ts"
  ],
  "exports": {
    "./util": {
      "require": "./dist/cjs/util/index.js",
      "import": "./dist/esm/util/index.js"
    },
    "./plugins/*": {
      "require": "./dist/cjs/plugins/*.js",
      "import": "./dist/cjs/plugins/*.js"
    }
  },
  "typesVersions": {
    "*": {
      "util": [
        "dist/cjs/util"
      ]
    }
  },
  "scripts": {
    "test": "tsc --noEmit",
    "clean": "rm -rf dist",
    "dev": "ts-node compile.ts",
    "build": "yarn clean && yarn build:cjs && yarn build:esm",
    "build:cjs": "tsc --declaration --outDir dist/cjs",
    "build:esm": "tsc --declaration --module esnext --outDir dist/esm",
    "preupdate-plugins": "tsc --build tsconfig.update.json",
    "update-plugins": "node dist/cjs/util/update-plugins.js",
    "postupdate-plugins": "npm run clean",
    "lint": "eslint '**/*.ts' && npx prettier --check '**/*.ts'",
    "lint:fix": "eslint '**/*.ts' --fix && npx prettier --write '**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/withfig/plugins.git"
  },
  "author": "Fig",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/withfig/plugins/issues"
  },
  "homepage": "https://github.com/withfig/plugins",
  "devDependencies": {
    "@types/finalhandler": "^1.1.1",
    "@types/node": "^17.0.23",
    "@types/serve-static": "^1.13.10",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "axios": "^0.26.0",
    "chalk": "^4.1.2",
    "child_process": "^1.0.2",
    "chokidar": "^3.5.3",
    "commander": "^9.1.0",
    "dotenv": "^16.0.0",
    "esbuild": "^0.14.29",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "fast-glob": "^3.2.11",
    "finalhandler": "^1.2.0",
    "prettier": "^2.6.2",
    "serve-static": "^1.15.0",
    "ts-node": "^10.6.0"
  },
  "dependencies": {
    "typescript": "^4.6.3"
  }
}
