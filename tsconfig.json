{
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./build",
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true
  },
  "exclude": ["node_modules/", "src/update-plugins.ts"],
  "include": ["src/**/*", "index.d.ts"],
  "types": ["index.d.ts"]
}
