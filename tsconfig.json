{
  "compilerOptions": {
    "outDir": "./build",
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true
  },
  "exclude": ["node_modules/", "util/update-plugins.ts"],
  "include": ["plugins/**/*", "util/**/*", "index.d.ts"],
  "types": ["index.d.ts"]
}
